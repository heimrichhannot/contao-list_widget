<div class="list-widget<?php if ($this->class): ?> <?= $this->class ?>"<?php endif; ?>">
    <?php if (empty($this->items)): ?>
        <?= $GLOBALS['TL_LANG']['MSC']['listWidget']['empty'] ?>
    <?php else: ?>
        <table>
            <thead>
                <tr>
                    <?php foreach ($this->headerFields as $strLabel): ?>
                        <th><?= $strLabel ?></th>
                    <?php endforeach; ?>
                </tr>
            </thead>
            <tbody>
                <?php foreach ($this->items as $arrItem): ?>
                    <tr>
                        <?php if (array_is_assoc($this->headerFields)): ?>
                            <?php foreach ($this->headerFields as $strField => $strLabel): ?>
                                <td><?= $arrItem[$strField] ?></td>
                            <?php endforeach; ?>
                        <?php else: ?>
                            <?php foreach ($this->headerFields as $strField): ?>
                                <td><?= $arrItem[$strField] ?></td>
                            <?php endforeach; ?>
                        <?php endif; ?>
                    </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
    <?php endif; ?>
</div>